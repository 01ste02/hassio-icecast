<?xml version="1.0"?>
<ices>
	<background>0</background>
	<logsize>2048</logsize>
	<loglevel>4</loglevel>
	<consolelog>1</consolelog>

	<stream>
		<metadata>
			<name>HomeAssistant Stream</name>
			<genre>All</genre>
			<description>Multiroom-spotify at home</description>
			<url>http://192.168.197.22</url>
		</metadata>

		<input>
        		<module>stdinpcm</module>
        		<param name="rate">44100</param>
        		<param name="channels">2</param>
        	</input>

		<instance>
            		<hostname>192.168.197.22</hostname>
			<port>6000</port>
			<username>source</username>
            		<password>thisisnopassword</password>
			<mount>/spotify2.ogg</mount>
			<reconnectattempts>10</reconnectattempts>
			<reconnectdelay>15</reconnectdelay>
            		<yp>0</yp>   <!-- allow stream to be advertised on YP, default 0 -->
            		<encode>  
                		<managed>0</managed>
		<!--            <nominal-bitrate>64000</nominal-bitrate>
		-->
                		<quality>5</quality>
                		<samplerate>44100</samplerate>
                		<channels>2</channels>
            		</encode>

         
        	</instance>
	</stream>
</ices>
